{
    "manifest_version": 3,
    "name": "Adblock For Youtubeâ„¢",
    "version": "1.3",
    "description": "A fast and undetectable YouTube Ads Blocker for Chrome.",
    "icons": {
        "16": "assets/16x16.png",
        "48": "assets/48x48.png",
        "128": "assets/128x128.png"
    },
    "action": {
        "default_icon": "assets/logo.png",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "modifyHeaders",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}